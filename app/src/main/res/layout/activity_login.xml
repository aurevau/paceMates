<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/dark_sky_blue">



    <ImageView
        android:padding="16dp"
        android:layout_marginTop="140dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/runner"
        android:outlineAmbientShadowColor="@color/light_gray"
        android:layout_marginBottom="16dp"
        />

    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="140dp">
        <EditText
            android:id="@+id/et_email"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:background="@color/off_white"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="140dp">
        <EditText
            android:id="@+id/et_password"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:background="@color/off_white"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_login"
            android:layout_marginStart="16dp"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/energy_orange"
            android:layout_weight="1"
            android:text="Login"/>
        <Space
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_marginEnd="16dp"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/energy_orange"
            android:layout_weight="1"
            android:text="Register"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_marginTop="26dp"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_gray_blue"
        />


</LinearLayout>


